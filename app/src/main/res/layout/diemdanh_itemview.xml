<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8"
    android:elevation="8dp">
    <ImageView
        android:background="@color/colorAccent"
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avt"
            android:layout_marginEnd="4dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/iv_avt"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/iv_person"
            android:text="Nguyễn Văn Cừ" />

        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/iv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_person"
            android:layout_toEndOf="@id/iv_avt"
            app:srcCompat="@drawable/ic_class_black_24dp" />
        <TextView
            android:id="@+id/tv_sbd"
            android:layout_width="wrap_content"
            android:text="4E"
            android:layout_below="@id/iv_person"
            android:layout_marginStart="4dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/iv_class"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>