<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="@dimen/margin_16"
    tools:context="lachongmedia.vn.demodiemdanh.ChooseActivity">

    <LinearLayout
        android:id="@+id/ll_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nguyễn Thị Dịu"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!--<android.support.v7.widget.AppCompatButton-->
        <!--android:id="@+id/btDiemdanh"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="64dp"-->
        <!--android:layout_marginEnd="4dp"-->
        <!--android:layout_weight="1"-->
        <!--android:background="@color/colorAccent"-->
        <!--android:text="Điểm danh" />-->

        <!--<android.support.v7.widget.AppCompatButton-->
        <!--android:id="@+id/btCoithi"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="64dp"-->
        <!--android:layout_marginStart="4dp"-->
        <!--android:layout_weight="1"-->
        <!--android:background="@color/colorAccent"-->
        <!--android:text="Coi thi" />-->
        <info.hoang8f.widget.FButton
            android:id="@+id/btDiemdanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:text="Điểm danh"
            android:textColor="@color/white"
            android:textSize="16sp"
            fbutton:buttonColor="@color/colorAccent"
            fbutton:cornerRadius="15dp"
            fbutton:shadowColor="@color/grey"
            fbutton:shadowEnabled="true"
            android:layout_marginEnd="4dp"
            fbutton:shadowHeight="5dp" />

        <info.hoang8f.widget.FButton
            android:layout_marginStart="4dp"
            android:id="@+id/btCoithi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:text="Coi thi"
            android:textColor="@color/white"
            android:textSize="16sp"
            fbutton:buttonColor="@color/colorAccent"
            fbutton:cornerRadius="15dp"
            fbutton:shadowColor="@color/grey"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />


    </LinearLayout>

</RelativeLayout>
